<%- model_class = Auto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Marca) %>:</strong></dt>
  <dd><%= @auto.Marca %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Modelo) %>:</strong></dt>
  <dd><%= @auto.Modelo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Año) %>:</strong></dt>
  <dd><%= @auto.Año %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Placa) %>:</strong></dt>
  <dd><%= @auto.Placa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Capacidad) %>:</strong></dt>
  <dd><%= @auto.Capacidad %></dd>
</dl>

<%= link_to t('.Regresar', :default => t("helpers.links.back")),
              autos_path, :class => 'btn btn-default'  %>
<%= link_to t('.Editar', :default => t("helpers.links.edit")),
              edit_auto_path(@auto), :class => 'btn btn-default' %>
<%= link_to t('.Eliminar', :default => t("helpers.links.destroy")),
              auto_path(@auto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro?')) },
              :class => 'btn btn-danger' %>
