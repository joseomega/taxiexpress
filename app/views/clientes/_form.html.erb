<%= simple_form_for @cliente, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :Nombre %>
  <%= error_span(@cliente[:Nombre]) %>
  <%= f.input :Apellido %>
  <%= error_span(@cliente[:Apellido]) %>
  <%= f.input :DNI %>
  <%= error_span(@cliente[:DNI]) %>
  <%= f.input :Telefono %>
  <%= error_span(@cliente[:Telefono]) %>
  <%= f.input :Direccion %>
  <%= error_span(@cliente[:Direccion]) %>
  <%= f.input :Correo %>
  <%= error_span(@cliente[:Correo]) %>
  <%= f.input :Usuario %>
  <%= error_span(@cliente[:Usuario]) %>
  <%= f.input :Contraseña %>
  <%= error_span(@cliente[:Contraseña]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clientes_path, :class => 'btn btn-default' %>
<% end %>
